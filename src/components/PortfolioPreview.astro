---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, slug } = Astro.props.project;
---

<span class="card">
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" class="card-image" />
	<p class="card-text">{data.description}</p>
</span>

<style>
	.card {
		position: relative;
		display: grid;
		grid-template: auto 1fr / auto 1fr;
		height: 11rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
		cursor: default;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 2;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: 1.5em;
		text-align: center;
	}

	.card-image {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: opacity 0.5s ease-in-out;
	}

	.card-text {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		padding: 1rem;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		background: var(--gradient-subtle);
		color: var(--gray-400);
		opacity: 0;
		transition: opacity 0.5s ease-in-out;
		font-family: var(--font-body);
		line-height: 1.5;
		font-size: 0.75em;
	}

	.card:hover .card-image {
		opacity: 0;
	}

	.card:hover .card-text {
		opacity: 1;
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.card-text {
			height: auto;
			font-size: 1.25em;
		}

		.title {
			font-size: 2em;
			border-radius: 0.9375rem;
		}
	}
</style>
